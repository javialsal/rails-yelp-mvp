<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.select :rating, Review::RATING, label: 'Rate the restaurant', error: 'Rating is mandatory, please specify one' %>
  <%= f.input :content, label: 'Review', placeholder: 'Write here your review please', error: 'Content is mandatory, please specify one' %>
  <%= f.button :submit %>
<% end %>
